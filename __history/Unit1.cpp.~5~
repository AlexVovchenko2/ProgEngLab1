void __fastcall TForm1::Button1Click(TObject *Sender)
{
	int n,m;
	AnsiString s1, s2;
	s1 = EditRows->Text;
	s2 = EditColumns->Text;
	size->Caption = s1 + "x" + s2;
	n = StrToInt(s1);
	m = StrToInt(s2);
}
