//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "Unit1.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
	StringGrid1->Hide();
	LabelMatrix->Hide();
    EditMatrix->Hide();
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button1Click(TObject *Sender)
{
	int n,m;
	AnsiString s1, s2;
	s1 = EditRows->Text;
	s2 = EditColumns->Text;
	size->Caption = s1 + "x" + s2;
	n = StrToInt(s1);
	m = StrToInt(s2);
	StringGrid1->RowCount = n;
	StringGrid1->ColCount = m;
	if (n > 0 && m > 0){
		StringGrid1->Show();
		LabelMatrix->Show();
		EditMatrix->Show();
	}else{
		LabelMatrix->Caption = "Incorrect size";
		LabelMatrix->Show();
    }
}
//---------------------------------------------------------------------------



/*void __fastcall TForm1::EditMatrixChange(TObject *Sender)
{
	StringGrid1->Cells[1][1] = EditMatrix->Text;
}    */
//---------------------------------------------------------------------------

//---------------------------------------------------------------------------
void __fastcall TForm1::EditMatrixKeyPress(TObject *Sender, System::WideChar &Key)

{
	if (Key == "Enter"){
		StringGrid1->Cells[1][1] = EditMatrix->Text;
	}
}
